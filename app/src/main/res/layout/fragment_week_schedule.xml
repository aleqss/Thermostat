<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nl.tue.hti.g33.thermostat.WeekScheduleFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_mon"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Mon"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_tue"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Tue"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_wed"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Wed"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thursday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_thu"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Thu"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_fri"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Fri"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_sat"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Sat"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday" />

    <nl.tue.hti.g33.thermostat.utils.DayTimelineView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_sun"
        android:layout_gravity="center_horizontal"
        custom:dayOfTheWeek="Sun"
        custom:colorDay="@android:color/holo_red_dark"
        custom:colorNight="@android:color/holo_blue_dark"
        custom:colorGrid="@android:color/secondary_text_light"
        custom:colorText="@android:color/primary_text_light" />
</LinearLayout>
